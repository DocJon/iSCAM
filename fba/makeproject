## Unix shell script: generate new project folders
## example ./makeproject HakeAssessment
## use chmod 777 makeproject to change permissions if necessary
mkdir $1
mkdir $1/DATA
mkdir $1/FIGS
mkdir $1/TABLES
mkdir $1/WRITEUP
mkdir $1/PRESENTATION
mkdir $1/MISC
mkdir $1/R
## don't forget to add to the svn repository

## iscam logo
cp ../src/r-code/iScamLogo.eps $1/MISC
cp ../src/r-code/iSCAM.R $1/R
cp ../src/r-code/iScamLogo.gif $1/R
cp ../src/r-code/iSCAMViewTracker.txt $1/R
cp ../src/r-code/iSCAMWin.txt $1/R
cp ../src/r-code/read.admb.R $1/R

## Copy Beamer template to PRESENTATION FOLDER
cp ../scripts/BeamerTemplate.tex $1/$1.tex
cp ../scripts/iScamLogo.pdf $1/iScamLogo.pdf
